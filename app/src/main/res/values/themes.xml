<resources>
    <style name="Theme.YourApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Your existing app theme -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_drawable</item>
        <item name="postSplashScreenTheme">@style/Theme.YourApp</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- AppCompat-compatible theme for SplashActivity -->
        <item name="android:windowBackground">@drawable/splash_icon_drawable</item> <!-- Optional: Use drawable as background -->
    </style>
</resources>